<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <div class="container">
      <%- include('../partials/navbar') %>
      <h1>Avengers Roster</h1>

      <table id="avengerslist">
        <thead>
          <tr>
            <th>Icon</th>
            <th>Avenger</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% avengers.forEach(function (a) { %>
          <tr>
            <td>
              <a href="/avengers/<%=a._id%>">
                <img
                  class="icon"
                  src="<%= a.icon %>"
                  onerror="if (this.src != '/images/No-Icon.png') this.src = '/images/No-Icon.png';"
                />
              </a>
            </td>
            <td>
              <a href="/avengers/<%=a._id%>"> <%= a.alias %> </a>
            </td>
            <td>
              <form
                id="deleteavenger"
                action="/avengers/<%=a._id%>/delete"
                method="POST"
              >
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>

          <% }); %>
        </tbody>
      </table>

      <a href="/avengers/new">Recruit Avenger</a>
    </div>
  </body>
</html>
