<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <div class="container">
      <%- include('../partials/backgroundleft') %>
      <div class="middle-div">
        <%- include('../partials/navbar') %>
        <div class="avengers-roster">
          <h1 class="page-title">Avengers Roster</h1>

          <table class="avengers-table">
            <thead>
              <tr>
                <th class="icon-col">Icon</th>
                <th class="avenger-col">Avenger</th>
                <th class="icon-col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% avengers.forEach(function (a) { %>
              <tr>
                <td>
                  <a href="/avengers/<%=a._id%>">
                    <img
                      class="icon"
                      src="<%= a.icon %>"
                      onerror="if (this.src != '/images/No-Icon.png') this.src = '/images/No-Icon.png';"
                    />
                  </a>
                </td>
                <td>
                  <a href="/avengers/<%=a._id%>"> <%= a.alias %> </a>
                </td>
                <td>
                  <form
                    id="deleteavenger"
                    action="/avengers/<%=a._id%>/delete"
                    method="POST"
                  >
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>

              <% }); %>
            </tbody>
          </table>
          <br />
          <a href="/avengers/new">Recruit Avenger</a>
        </div>
      </div>
      <%- include('../partials/backgroundright') %>
    </div>
  </body>
</html>
