<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <div class="container">
      <%- include('../partials/navbar') %>
      <div class="content">
        <div class="profile-header">
          <div class="model-div">
            <img
              class="model"
              src="<%=avenger.model%>"
              onerror="if (this.src != '/images/No-Image.png') this.src = '/images/No-Image.png';"
            />
          </div>
          <div class="identity-div">
            <div class="identity-pic">
              <img
                class="photo"
                src="<%=avenger.photo%>"
                onerror="if (this.src != '/images/No-Image.png') this.src = '/images/No-Image.png';"
              />
              <a href="/avengers/<%=avenger._id%>/edit">Update Profile</a>
            </div>
            <div class="identity-names">
              <h2>Alias: <%=avenger.alias%></h2>
              <h2>Identity: <%=avenger.identity%></h2>
              <div class="description">
                <h2>Description:</h2>
                <p><%= avenger.description%></p>
              </div>
              <div class="abilities">
                <h2>Abilities</h2>
                <ul class="ul-abilities">
                  <% for (let i=0; i< avenger.abilities.length; i++) { %>
                  <li><%=avenger.abilities[i]%></li>
                  <% }; %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="profile-body">
          <div class="mission">
            <h2>Missions Assigned</h2>
            <ul class="missionlist">
              <% missions.forEach( function (mission) { %>
              <li>
                <a href="/missions/<%=mission._id%>"><%=mission.operation%></a>
              </li>

              <% }) %>
            </ul>
          </div>
        </div>
      </div>
      <a href="/avengers">Back to All Avengers</a>
    </div>
  </body>
</html>
