<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body>
    <div class="container">
      <div class="all-content">
        <%- include('../partials/backgroundleft') %>
        <div class="middle-div">
          <%- include('../partials/navbar') %>
          <div class="middle-background">
            <div class="avengers-application">
              <h1>Mission Dispatch</h1>
              <img id="nickfury-icon" src="/images/nickfury.jpg" />
              <form id="mission-dispatch" action="/missions/new" method="POST">
                <div class="mission-dispatch-content">
                  <label>Operation Name: </label>
                  <input type="text" name="operation" /><br />
                  <label>Objective</label>
                  <input type="text" name="objective" /><br />
                  <label>Supervillains</label>
                  <input type="text" name="supervillains" /><br />
                  <label>Location</label>
                  <input type="text" name="location" /><br />

                  <button id="submit-missionform" type="submit">
                    Post Mission
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <%- include('../partials/backgroundright') %>
      </div>
    </div>
  </body>
</html>
